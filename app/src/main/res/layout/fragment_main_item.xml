<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp">

    <LinearLayout
        android:id="@+id/itemTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingTop="10dp"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingBottom="5dp"
        android:gravity="center"
        android:background="@drawable/bg_main_drop_shadow"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:id="@+id/itemSearchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:src="@drawable/violeta_search" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/items"
            android:fontFamily="@font/ageo_regular"
            android:textStyle="bold"
            android:textSize="18sp"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <ImageButton
            android:id="@+id/itemMoreBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#fff"
            android:src="@drawable/more"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/itemMiddleContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/itemTopBar"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/itemNoItemImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/empty_box" />

        <TextView
            android:id="@+id/itemNoItemImageText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/it_is_empty_here"
            android:fontFamily="@font/ageo_regular"
            android:textStyle="bold"
            android:textSize="18sp"
            android:paddingTop="10dp"
            android:paddingBottom="6dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/itemNoItemImage"/>

        <TextView
            android:id="@+id/itemNoItemTextDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ageo_regular"
            android:textSize="12sp"
            android:layout_below="@id/itemNoItemImageText"
            android:layout_centerHorizontal="true"
            android:text="@string/add_your_first_item_by_tapping_the"/>
    </RelativeLayout>

    <FrameLayout
        android:id="@+id/itemAddItemBtnContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/itemAddItemBtn"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@drawable/add"
            android:background="@drawable/bg_item_add_btn"/>

    </FrameLayout>


</androidx.constraintlayout.widget.ConstraintLayout>